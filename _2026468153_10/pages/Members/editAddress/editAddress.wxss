page {
    background: #fff;
}

.addedit {
    width: 94%;
    margin: 0 auto;
}

.option {
    border-bottom: 2rpx solid #f2f2f2;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    height: 90rpx;
}

.name {
    width: 23%;
    color: #555;
}

.value {
    width: 77%;
    color: #555;
}

.t-name {
    display: flex;
    align-items: center;
}

.t-name>input {
    width: 70%;
}

.t-name>picker {
    width: 29%;
    text-align: center;
    color: #555;
    border-left: 2rpx solid #f2f2f2;
}

.submit {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 300rpx;
}

.submit>button {
    background: #ffb53b;
    color: #fff;
    font-size: 30rpx;
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 20px;
    width: 80%;
}

.msg {
    height: 90rpx;
    font-size: 26rpx;
    line-height: 90rpx;
    color: red;
    text-align: center;
}