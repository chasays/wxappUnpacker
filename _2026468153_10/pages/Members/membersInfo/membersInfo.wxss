page {
    background: #fff;
}

.header {
    height: 220rpx;
    background: 50%;
    text-align: center;
    font-size: 30rpx;
    color: #555;
}

.header>image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-top: 30rpx;
}

.list {
    border: 2rpx solid #f2f2f2;
    box-shadow: 0 0 10rpx 2rpx #ddd;
    border-radius: 20rpx;
    width: 94%;
    margin: 30rpx auto 0;
}

.list>view {
    width: 94%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    height: 90rpx;
    border-bottom: 2rpx solid #f2f2f2;
}

.list>view:last-child {
    border-bottom: 0;
}

.list>view>.l-left {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #555;
    width: 30%;
}

.list>view>.l-left>text {
    margin-left: 10rpx;
}

.list>view>.l-right {
    display: flex;
    align-items: center;
    width: 70%;
    font-size: 30rpx;
    color: #555;
}

.list>view>.l-right>input,.list>view>.l-right>picker {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: end;
}

.footer {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200rpx;
    margin-top: 30rpx;
}

.footer>button {
    color: #fff;
    border-radius: 10rpx;
    width: 94%;
    height: 80rpx;
    line-height: 80rpx;
}